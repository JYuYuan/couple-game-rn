{
  "name": "couple-game-server",
  "version": "1.0.0",
  "description": "Socket.io server for couple game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch index.ts",
    "dev:build": "tsc --watch",
    "clean": "rm -rf dist",
    "simulator": "tsx bot/simulator-cli.js",
    "sim-quick": "tsx bot/simulator-cli.js --quick",
    "sim-3p": "tsx bot/simulator-cli.js --players 3",
    "sim-wheel": "tsx bot/simulator-cli.js --type wheel",
    "sim-join": "tsx bot/simulator-cli.js --join"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http": "^0.0.1-security",
    "ioredis": "^5.8.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^11.0.0",
    "nodemon": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}
